<!DOCTYPE html>
<html lang="sv">
<head>
    <title>Trafikhändelser från SR Trafik</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include partials/meta.ejs %>
    <%- include partials/css.ejs %>
    <script src="//maps.googleapis.com/maps/api/js?sensor=false"></script>
    <style>
        body, html {
            width: 100%;
            height: 100%;
        }

        .angular-google-map-container {
            width: 100vw;
            height: 600px;
        }
    </style>
</head>
<body class="container-fluid" ng-app="TrafficReportApp">
<div class="row" ng-controller="TrafficReportAppController as trafficreport">
    <traffic-menu messages="trafficreport.messages">
    </traffic-menu>

    <ui-gmap-google-map center="trafficreport.map.center" zoom="trafficreport.map.zoom">
        <ui-gmap-markers models="trafficreport.markers" coords="'self'" id="'id'">
        </ui-gmap-markers>
    </ui-gmap-google-map>

    <footer class="col-sm-12">
        <p class="pull-right small">
            <br><br>Google Maps Mashup by <a href="https://github.com/antonkandersson">Anton K. Andersson</a>.
        </p>
    </footer>
</div>
<%- include partials/scripts.ejs %>
</body>
</html>